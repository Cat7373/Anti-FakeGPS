{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./lib",
  },
  "include": ["./src/**/*.ts"],
}
